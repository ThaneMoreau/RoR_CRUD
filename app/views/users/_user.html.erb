  <tr id="id_user_<%= user.id %>">
    <%= form_for user, remote: true do |f| %>
    <td><%= f.text_field  :id, 
            :readonly => true,
            class: 'form-control', 
            value: user.id %></td>
                          
    <td class="change">
                  <%= f.text_field  :first_name, 
                      :readonly => true,
                      :required => true,
                      :id => 'user_' + user.id.to_s + '_first_name',
                      class: 'form-control upper', 
                      value: user.first_name %></td>
                                         
    <td class="change">
                  <%= f.text_field  :last_name, 
                      :readonly => true,
                      :required => true,
                      :id => 'user_' + user.id.to_s + '_last_name',
                      class: 'form-control upper', 
                      value: user.last_name %></td>
                      
    <td class="change">
                  <%= f.text_field  :email, 
                      :readonly => true,
                      :required => true,
                      :id => 'user_' + user.id.to_s + '_email',
                      class: 'form-control', 
                      value: user.email %></td>
                      
    <td class="change">
                  <%= f.text_field  :phone, 
                      :readonly => true,
                      :required => true,
                      :maxlength => 11, 
                      :minlength => 11,
                      :id => 'user_' + user.id.to_s + '_phone',
                      class: 'form-control', 
                      value: user.phone %></td>
                      
    <td class="buttons">
                <%= link_to "Delete",
                    user, 
                    method: :delete,
                    data: {confirm: "Delete the contact?" },
                    id: "btn_delete",
                    class: "btn btn-danger btn-sm btn-block",
                    remote: true %>
                    
                <%= link_to "Edit", 
                    edit_user_path(user), 
                    id: "btn_update", 
                    class: "btn btn-primary btn-sm btn-block", 
                    remote: true %>
                    
                <%= f.submit "Save", 
                class: "btn btn-success btn-block collapse", 
			  				data: {"disable-with": "Saving..."} %>
    </td>
    <% end %>
  </tr>